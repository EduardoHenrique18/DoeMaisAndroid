<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_marginTop="100dp"
        android:text="Criar ponto"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_point_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="descrição"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/text_point_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_point_name"
        app:layout_constraintTop_toBottomOf="@+id/text_point_name" />

    <EditText
        android:id="@+id/text_point_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button_point_select_image"
        android:layout_width="230dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:text="selecionar imagem"
        app:layout_constraintEnd_toEndOf="@+id/text_point_description"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/text_point_description"
        app:layout_constraintTop_toBottomOf="@+id/text_point_description" />

    <Button
        android:id="@+id/button_pointe_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="criar"
        app:layout_constraintEnd_toEndOf="@+id/button_point_select_image"
        app:layout_constraintStart_toStartOf="@+id/button_point_select_image"
        app:layout_constraintTop_toBottomOf="@+id/button_point_select_image" />

</androidx.constraintlayout.widget.ConstraintLayout>